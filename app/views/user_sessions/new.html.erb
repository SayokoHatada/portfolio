<div class="text-center" style="padding:50px 0">
  <div class="logo">Login</div>
  <div class="login-form-1">
    <%= form_with url: login_path, local: true, class: 'text-left', id: 'register-form' do |form| %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <%= form.label :email, class: 'sr-only' %>
            <%= form.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :password, class: 'sr-only' %>
            <%= form.password_field :password, class: 'form-control' %>
          </div>
        <%= form.submit 'ログイン', class: 'login-button' %>
        </div>
      </div>
      <div class="etc-login-form">
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path %>
      </div>
    <% end %>
  </div>
</div>