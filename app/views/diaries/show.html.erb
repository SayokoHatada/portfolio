<% content_for(:title, t(".title")) %>
<div class="container mt-5">
  <div class="diary-title">
    <h1><%= @diary.title %></h1>
  </div>
  <% if @diary.image_url.present? %>
    <img src="<%= @diary.image_url %>" class="diary-image rounded-circle mt-5" width="300" height="300">
  <% end %>
  
  <div class="row justify-content-center mt-5">
    <div class="show-box">
      <p><%= @diary.body %></p>
    </div>
    <div class="icon-container2">
      <i class="bi bi-chevron-double-right"></i>
    </div>
    <div class="show-box">
        <p><%= @diary.corrected_body %></p>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-md-6 d-flex justify-content-center">
    <%= link_to 'Edit', edit_diary_path(@diary), class: "btn btn-warning me-3" %>
    <%= link_to 'Delete', @diary, data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
    </div>
  </div>

  <%= link_to 'Back', diaries_path, class: "btn btn-secondary mt-5" %>
</div>