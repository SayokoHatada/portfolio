<div class="col-md-9 main-content">
  <h1>英文絵日記の作成</h1>

  <% if @diary.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@diary.errors.count, "error") %> prevented this diary from being saved:</h2>
      <ul>
        <% @diary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @diary, data: { turbo: true } do |form| %>
    <div class="mb-3">
      <label for="diary_title" class="form-label">タイトルを入力してください</label>
      <%= form.text_field :title, class: "form-control", placeholder: "タイトルを入力..." %>
    </div>
    <div class="mb-3">
      <label for="diary_body" class="form-label">英文を入力してください(50-2000字)</label>
      <%= form.text_area :body, rows: 5, class: "form-control", placeholder: "ここに英文を入力..." %>
    </div>
    <%= form.submit "Create", class: "btn btn-primary" %>
  <% end %>

  <%= link_to '戻る', diaries_path, class: "btn btn-secondary mt-3" %>
</div>
