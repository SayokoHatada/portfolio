<div class="col-md-12 ml-sm-auto px-4 mt-5 main-content">
  <h1 class="diaries-title fst-italic"><%= t('diary.title') %></h1>

  <% if @diary.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @diary.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="diaries-body fst-italic">
    <%= form_with model: @diary, data: { turbo: true } do |form| %>
      <div class="mb-3">
        <label for="diary_title" class="form-label">Title</label>
        <%= form.text_field :title, class: "form-control", placeholder: "タイトルを入力..." %>
      </div>
      <div class="mb-3">
        <label for="diary_body" class="form-label">Your diary (50-2000letters)</label>
        <%= form.text_area :body, rows: 5, class: "form-control", placeholder: "ここに英文を入力..." %>
      </div>
      <div class="mb-3">
        <label for="diary_keyword" class="form-label">keyword</label>
        <%= form.text_area :keyword, rows: 2, class: "form-control", placeholder: "キーワードを入力..." %>
      </div>
      <%= form.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>

  <%= link_to 'Back', diaries_path, class: "btn btn-secondary mt-5" %>
</div>
